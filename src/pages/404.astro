---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import shadowConfused from '../images/shadow-confused.webp';
import Button from '../components/Button.astro';

const appName = __APP_NAME__;
---

<Layout title={`${appName} - Page Not Found`}>
    <Navbar />
    <main class="container mx-auto px-4 py-8">
        <div class="flex flex-col items-center justify-center min-h-[70vh] text-center space-y-6">
            <h1 class="text-8xl font-bold text-primary">404</h1>
            <h2 class="text-3xl font-semibold text-text">Oops! Our hedgehog couldn't find this page</h2>
            <p class="text-lg text-secondary max-w-md">
                Looks like our little spiky friend got lost. The page you're looking for might have been moved or doesn't exist.
            </p>
            <Image 
                src={shadowConfused} 
                alt="Confused Hedgehog"
                class="w-[5rem] h-[5rem] object-cover rounded-md spin-effect"
            />
            <Button href="/">
                Go Back Home
            </Button>
        </div>
    </main>
</Layout>

<style lang="scss">
@keyframes gentle-spin {
    0% {
        transform: rotate(-5deg);
    }
    50% {
        transform: rotate(5deg);
    }
    100% {
        transform: rotate(-5deg);
    }
}

.spin-effect {
    animation: gentle-spin 3s ease-in-out infinite;
    
    &:hover {
        animation-play-state: paused;
    }
}
</style>
