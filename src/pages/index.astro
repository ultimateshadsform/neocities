---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import shadowPoint from '../images/shadow-point.png';

const appName = __APP_NAME__;
---

<Layout title="Hedgehog Form">
  <Navbar />
  <main class="container mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row items-center gap-12">
      <div class="md:w-1/2">
        <Image
          src={shadowPoint}
          alt="shadow the hedgehog"
          class="w-full max-h-[500px] object-contain rounded-lg shadow-image"
          loading="eager"
          fetchpriority="high"
        />
      </div>
      <div class="md:w-1/2 space-y-6">
        <h1 class="text-4xl font-bold text-text whitespace-nowrap">
          Welcome to {appName}
        </h1>
        <p class="text-lg text-primary brightness-200">
          Welcome to my blog! Here I write about my experiences and thoughts on
          various topics.
        </p>
      </div>
    </div>
  </main>
</Layout>

<style lang="scss">
  .shadow-image {
    animation: glowAndBounce 4s ease-in-out infinite;
    animation-delay: -2s;
    transition: filter 0.5s ease;

    @keyframes glowAndBounce {
      0% {
        filter: drop-shadow(0 0 15px hsla(var(--twc-primary), 0.5));
        transform: rotate(-5deg);
      }
      25% {
        filter: drop-shadow(0 0 35px hsla(var(--twc-primary), 0.8));
        transform: rotate(5deg);
      }
      50% {
        filter: drop-shadow(0 0 15px hsla(var(--twc-primary), 0.5));
        transform: rotate(0deg);
      }
      75% {
        filter: drop-shadow(0 0 35px hsla(var(--twc-primary), 0.8));
        transform: rotate(5deg);
      }
      100% {
        filter: drop-shadow(0 0 15px hsla(var(--twc-primary), 0.5));
        transform: rotate(-5deg);
      }
    }
  }
</style>
